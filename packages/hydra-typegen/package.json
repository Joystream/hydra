{
  "name": "@subsquid/hydra-typegen",
  "version": "4.2.0-alpha.5",
  "description": "\"Hydra-cli pluging for generating typed events\"",
  "main": "lib/index.js",
  "repository": "https://github.com/Joystream/hydra",
  "author": "@dzhelezov",
  "license": "MIT",
  "files": [
    "/bin",
    "/lib",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hydra-typegen": "./bin/run"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "copy-templates": "copyfiles -u 1 src/**/*.hbs lib/",
    "build": "yarn clean && tsc && yarn copy-templates",
    "run-dev": "node ./bin/run",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif-dev manifest",
    "test": "nyc --extension .ts mocha --require ts-node/register --forbid-only \"./{src,test}/**/*.spec.ts\""
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hydra-typegen",
    "scope": "@subsquid",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/errors"
    ]
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.3.5",
    "@polkadot/api": "^5.6.1",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "yaml": "^1.10.2",
    "yaml-validator": "^3.0.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1"
  }
}