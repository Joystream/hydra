{
  "name": "@joystream/hydra-typegen",
  "version": "3.1.0-alpha.13",
  "description": "\"Hydra-cli pluging for generating typed events\"",
  "main": "lib/index.js",
  "repository": "https://github.com/Joystream/hydra",
  "author": "@dzhelezov",
  "license": "MIT",
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hydra-typegen": "./bin/run"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "copy-templates": "copyfiles -u 1 src/**/*.hbs lib/",
    "build": "yarn clean && tsc && yarn copy-templates",
    "run-dev": "node ./bin/run",
    "postpack": "rm -f oclif.manifest.json",
    "lint": "eslint . --cache --ext .ts",
    "prepack": "yarn build && oclif-dev manifest",
    "test": "nyc --extension .ts mocha --require ts-node/register --forbid-only \"./{src,test}/**/*.spec.ts\""
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hydra-typegen",
    "scope": "@joystream",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/errors"
    ]
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.3.3",
    "@polkadot/api": "4.16.2",
    "debug": "^4.3.1",
    "handlebars": "^4.7.6",
    "lodash": "^4.17.20",
    "ws": "^8.2.2",
    "yaml": "^1.10.0",
    "yaml-validator": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/figlet": "^1.2.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "chai": "^4.2.0",
    "copyfiles": "^2.4.1",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^4.1.3"
  }
}
