{
  "name": "@subsquid/hydra-processor",
  "version": "5.0.0-alpha.5",
  "description": "Hydra Processor CLI",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hydra-processor": "./bin/run"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hydra-processor",
    "scope": "@subsquid",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/errors"
    ]
  },
  "license": "MIT",
  "scripts": {
    "pub": "yarn build && yarn publish --access public",
    "run-dev": "node ./bin/run",
    "build": "rm -rf lib && tsc --build tsconfig.json",
    "postpack": "rm -f oclif.manifest.json",
    "test-build": "rm -rf test-lib && tsc --build ./test/tsconfig.json",
    "prepack": "yarn build && oclif-dev manifest",
    "test": "INDEXER_ENDPOINT_URL=http://fake/endpoint nyc --extension .ts mocha --require ts-node/register --forbid-only \"./{src,test}/**/*.spec.ts\""
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.3.5",
    "@subsquid/hydra-common": "^5.0.0-alpha.5",
    "chalk": "^4.1.2",
    "delay": "~5.0.0",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.1",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-request": "^3.5.0",
    "p-immediate": "^3.2.0",
    "p-retry": "~4.6.1",
    "p-throttle": "~4.1.1",
    "p-wait-for": "^3.2.0",
    "p-whilst": "~2.1.0",
    "prom-client": "^12.0.0",
    "semver": "^7.3.5",
    "shortid": "^2.2.16",
    "typedi": "^0.8.0",
    "yaml": "^1.10.2",
    "yaml-validator": "^3.0.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@types/express": "^4.17.13",
    "@types/figlet": "^1.5.4",
    "@types/node": "^14.17.11",
    "@types/semver": "^7.3.8"
  }
}
