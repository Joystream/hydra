{
  "name": "@joystream/hydra-processor",
  "version": "5.0.0-alpha.6",
  "description": "Hydra Processor CLI",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hydra-processor": "./bin/run"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hydra-processor",
    "scope": "@joystream",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/errors"
    ]
  },
  "license": "MIT",
  "scripts": {
    "pub": "yarn build && yarn publish --access public",
    "run-dev": "node ./bin/run",
    "build": "rm -rf lib && yarn tsc --build tsconfig.json",
    "postpack": "rm -f oclif.manifest.json",
    "test-build": "rm -rf test-lib && yarn tsc --build ./test/tsconfig.json",
    "prepack": "yarn build && oclif-dev manifest",
    "lint": "eslint . --ext .ts",
    "test": "bash run-tests.sh",
    "test:run": "yarn nyc --extension .ts mocha --timeout 70000 --exit --require ts-node/register --forbid-only \"./{src,test}/**/*.spec.ts\""
  },
  "dependencies": {
    "@joystream/hydra-common": "^5.0.0-alpha.6",
    "@joystream/hydra-db-utils": "^5.0.0-alpha.6",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.3.3",
    "async-lock": "^1.3.1",
    "axios": "^1.1.3",
    "bn.js": "^5.2.1",
    "chalk": "^4.1.0",
    "delay": "^5.0.0",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "figlet": "^1.5.2",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "lodash.debounce": "^4.0.8",
    "p-immediate": "^3.2.0",
    "p-throttle": "~4.1.1",
    "p-wait-for": "~3.2.0",
    "p-whilst": "~2.1.0",
    "prom-client": "^12.0.0",
    "semver": "^7.3.4",
    "typedi": "^0.8.0",
    "yaml": "^1.10.0",
    "yaml-validator": "^3.0.0"
  },
  "devDependencies": {
    "@joystream/hydra-cli": "^5.0.0-alpha.6",
    "@polkadot/api": "8.9.1",
    "@types/async-lock": "^1.1.3",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.2.19",
    "@types/express": "^4.17.8",
    "@types/figlet": "^1.2.1",
    "@types/graphql": "^14.5.0",
    "@types/lodash.debounce": "^4.0.7",
    "@types/mocha": "^8.2.3",
    "@types/node": "^12",
    "chai": "^4.3.4",
    "eslint": "^7.12.1",
    "mocha": "^9.0.2",
    "nyc": "^15.1.0",
    "pm2": "^5.1.0",
    "ts-auto-mock": "^3.1.2",
    "ts-mock-imports": "^1.3.3",
    "ts-node": "^10.2.1",
    "ts-sinon": "^2.0.1",
    "tslib": "^2.0.3",
    "typeorm": "https://github.com/Joystream/typeorm/releases/download/0.3.5/typeorm-v0.3.5.tgz",
    "typescript": "4.4.2",
    "ws": "^8.2.2"
  }
}
