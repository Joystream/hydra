{
  "name": "@subsquid/hydra-cli",
  "description": "CLI tool for building a Hydra query node",
  "version": "4.1.0-alpha.4",
  "author": "metmirr @metmirr subsquid @dzhelezov",
  "license": "MIT",
  "bin": {
    "hydra-cli": "./bin/run"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "hydra-cli",
    "scope": "@subsquid",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/errors",
      "@oclif/plugin-plugins"
    ]
  },
  "repository": "git@github.com:subsquid/hydra.git",
  "bugs": "https://github.com/subsquid/hydra/issues",
  "homepage": "https://www.subsquid.io/",
  "keywords": [
    "oclif"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc --build tsconfig.json",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && cp -LR ./src/templates ./lib/templates && oclif-dev manifest",
    "test": "nyc --extension .ts mocha --require ts-node/register --forbid-only \"test/**/*.test.ts\""
  },
  "dependencies": {
    "@inquirer/input": "^0.0.13-alpha.0",
    "@inquirer/password": "^0.0.12-alpha.0",
    "@inquirer/select": "^0.0.13-alpha.0",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-plugins": "^1.10.1",
    "@subsquid/warthog": "^4.1.0-alpha.4",
    "@types/copyfiles": "^2.4.1",
    "@types/fs-extra": "^8.1.2",
    "@types/graphql": "^14.5.0",
    "@types/listr": "^0.14.4",
    "@types/mustache": "^4.1.2",
    "@types/node": "^14.17.11",
    "chalk": "^4.1.2",
    "cli-ux": "^5.6.3",
    "copyfiles": "^2.4.1",
    "execa": "^4.1.0",
    "glob": "^7.1.7",
    "gluegun": "^4.6.1",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.12.5",
    "listr": "^0.14.3",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "pluralize": "^8.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/pluralize": "^0.0.29",
    "@types/temp": "^0.8.34",
    "@types/tmp": "^0.2.1",
    "mocha-chai-snapshot": "^1.0.0",
    "spawn-command": "^0.0.2",
    "temp": "^0.9.4"
  }
}